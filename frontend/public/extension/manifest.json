{
  "manifest_version": 3,
  "name": "LocalAI Gmail Assistant",
  "version": "1.0.0",
  "description": "AI-powered email assistant for Gmail with RAG and LLM capabilities",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "*://mail.google.com/*",
    "http://localhost:8000/*",
    "https://*.ngrok.io/*",
    "https://*.ngrok-free.app/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "LocalAI Assistant"
  },
  
  "side_panel": {
    "default_path": "index.html"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["index.html", "static/js/*", "static/css/*", "static/media/*"],
      "matches": ["*://mail.google.com/*", "<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
