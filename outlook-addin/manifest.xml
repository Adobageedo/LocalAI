<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="MailApp">
  <Id>5de7e841-95d1-4e4a-8510-a5a9c78e0111</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Chardouin</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Email AI Assistant"/>
  <Description DefaultValue="AI-powered email management and composition assistant for Outlook"/>
  <IconUrl DefaultValue="https://chat.genissel.com/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://chat.genissel.com/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://chat.genissel.com/support"/>
  <AppDomains>
    <AppDomain>https://chat.genissel.com</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://chat.genissel.com/taskpane.html"/>
        <RequestedHeight>350</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          <!-- Message Compose -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="TemplateGenerator.ComposeGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="ComposeOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.ComposeUrl"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          <!-- Message Read -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="TemplateGenerator.ReadGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="ReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.ReadUrl"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://chat.genissel.com/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://chat.genissel.com/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://chat.genissel.com/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://chat.genissel.com/commands.html"/>
        <bt:Url id="Taskpane.ComposeUrl" DefaultValue="https://chat.genissel.com/taskpane.html?mode=compose"/>
        <bt:Url id="Taskpane.ReadUrl" DefaultValue="https://chat.genissel.com/taskpane.html?mode=read"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Email Template Generator"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Generate Template"/>
        <bt:String id="ActionButton.Label" DefaultValue="Create Template"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Opens a pane to generate AI-powered email templates based on context."/>
        <bt:String id="ActionButton.Tooltip" DefaultValue="Generate an AI-powered email template based on email context."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
